@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login Form</title>
    <link rel="stylesheet" href="/123/css/style_admin.css">
</head>
<body>
    <div class="login">
        <div class="login-triangle"></div>
        <h2 class="login-header">Login Admin</h2>
        <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
        <form class="login-container" action="@Url.Action("Login_Admin","Admin")" method="post">
            <p><input type="text" name="ID" placeholder="ID" required=""></p>
            <p><input type="password" name="Password" placeholder="Password" required=""></p>
            <input type="submit" value="Login">
        </form>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
</body>
</html>