@using QLLaptop.Models
@model List<GH>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/GH_View.cshtml";
}

<h2 style="text-align:center;color:red;">Thông Tin Giỏ Hàng</h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold;color:blueviolet;background-color:lightblue">
        <td>Mã sản phẩm</td>
        <td>Tên sản phẩm</td>
        <td>Ảnh</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td>@item.iMaLT</td>
            <td>@item.sTenLT</td>
            <td><img style="height:100px" src="/123/Hinh/@item.sAnhbia" /></td>
            <td>@item.iSoluong</td>
            <td>@string.Format("{0:0,0}", item.dDongia)</td>
            <td>@string.Format("{0:0,0}", item.dThanhtien)</td>
        </tr>
    }
    <tr style="font-weight:bold;text-align:right;color:red">
        <td align="center" colspan="3">Số lượng : @ViewBag.Tongsoluong</td>
        <td align="center" colspan="3">Tổng tiền: @string.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        @using (Html.BeginForm("GioHang", "GioHang"))
        {
            <td align="center" colspan="6"><input type="submit" value="Back to cart" /></td>
        }
    </tr>
</table>

<h2 style="text-align:center;color:red;">Thông Tin Đặt Hàng</h2>
@{
    KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
}
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td style="color:blueviolet">Họ tên khách hàng: </td>
            <td style="font-weight:bold">@kh.HoTen</td>
        </tr>
        <tr style="height:40px">
            <td style="color:blueviolet">Địa chỉ: </td>
            <td style="font-weight:bold">@kh.DiachiKH</td>
        </tr>
        <tr style="height:40px">
            <td style="color:blueviolet">Điện thoại: </td>
            <td style="font-weight:bold">@kh.DienthoaiKH</td>
        </tr>
        <tr style="height:40px">
            <td style="color:blueviolet">Ngày đặt: </td>
            <td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
        </tr>
        <tr style="height:40px">
            <td style="color:blueviolet">Ngày giao hàng: </td>
            <td style="font-weight:bold"><input type="date" name="Ngaygiao" required /></td>
        </tr>
        <tr style="height:40px">
            <td style="color:blue"><b><input type="submit" value="Dat Hang" /></b></td>
